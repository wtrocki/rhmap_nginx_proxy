#!/usr/bin/env bash
set -e -o pipefail

echo "Updating configuration"
echo "      
      DNS SERVER ${DNS_SERVER}
      BASE_HOST ${BASE_HOST}
      APP_HOST_BASE ${APP_HOST_BASE}
      LOG_LEVEL ${LOG_LEVEL}
" 

envsubst '${DNS_SERVER}
          ${BASE_HOST}
          ${APP_HOST_BASE}
          ${LOG_LEVEL}' < "/etc/nginx/nginx.conf.template" > "/etc/nginx/nginx.conf"

echo "Starting nginx server"
exec nginx -c /etc/nginx/nginx.conf
